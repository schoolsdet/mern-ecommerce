          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/reset/{token}": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Enter new password after reset",
        "parameters": [
          {
            "in": "path",
            "name": "token",
            "description": "Reset token",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "description": "New Password",
          "content": {
            "application/json":{
              "schema": {
                "required": ["password"],
                "properties": {
                  "password": {
                    "type": "string",
                    "example": "Password1"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed",
            "content": {
              "application/json": {
