{
  "openapi": "3.0.3",
  "info": {
    "version": "1.0.0",
    "title": "SDET School MERN store",
    "description": "SWAGGER API Documentation for Students of SDET School"
  },
  "servers": [
    {
      "url": "https://mern-ecommerce.sdet.school/api"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Login to the app",
        "requestBody": {
          "description": "Credentials",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Credentials"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged to app",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "User not exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Incorrect Password",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IncorrectPassword"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Register new user",
        "requestBody": {
          "description": "User info",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInfo"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Account created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "409": {
            "description": "User already exist",
            "content": {
              "application/json":{
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/forgot": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Reset password",
        "requestBody": {
          "description": "Reset user password",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Email"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset link sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/reset/{token}": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Enter new password after reset",
        "parameters": [
          {
            "in": "path",
            "name": "token",
            "description": "Reset token",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "description": "New Password",
          "content": {
            "application/json":{
              "schema": {
                "required": ["password"],
                "properties": {
                  "password": {
                    "type": "string",
                    "example": "Password1"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/reset": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Change password",
        "description": "Change password",
        "security": [{
          "bearerAuth": []
        }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetPassword"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/address": {
      "get": {
        "tags": ["Address"],
        "summary": "Get user addresses",
        "description": "Get user addresses",
        "security": [{
          "bearerAuth": []
        }],
        "responses": {
          "200": {
            "description": "Array of addresses",
            "content": {
              "application/json":{
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AddressResponse"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/address/add": {
      "post": {
        "tags": ["Address"],
        "summary": "Add user address",
        "description": "Add user address",
        "security": [{
          "bearerAuth": []
        }],
        "requestBody": {
          "content": {
            "application/json":{
              "schema": {
                "$ref": "#/components/schemas/Address"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Address added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddressCreateResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/address/{id}": {
      "parameters": [{
        "in": "path",
        "name": "id",
        "schema": {
          "type": "string",
          "required": true
        }
      }],
      "get": {
        "tags": ["Address"],
        "summary": "Get user address by id",
        "description": "Get user address by id",
        "security": [{
          "bearerAuth": []
        }],
        "responses": {
          "200": {
            "description": "Address by id",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddressResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Address not found",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Address"],
        "summary": "Update user address by id",
        "description": "Update user address by id",
        "security": [{
          "bearerAuth": []
        }],
        "requestBody": {
          "description": "Updated address",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Address"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/address/delete/{id}":{
      "parameters": [{
        "in": "path",
        "name": "id",
        "schema": {
          "type": "string",
          "required": true
        }
      }],
      "delete": {
        "tags": ["Address"],
        "summary": "Delete user address by id",
        "description": "Delete user address by id",
        "security": [{
          "bearerAuth": []
        }],
        "responses": {
          "200": {
            "description": "Delete address",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddressDeleteResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Credentials": {
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "sim@email.com"
          },
          "password": {
            "type": "string",
            "example": "Password1"
          }
        }
      },
      "LoginResponse": {
        "properties": {
          "success": {
            "type": "boolean"
          },
          "token": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "firstName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        }
      },
      "RegisterResponse": {
        "properties": {
          "success": {
            "type": "boolean"
          },
          "subscribed": {
            "type": "boolean"
          },
          "token": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "firstName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        }
      },
      "IncorrectPassword": {
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "string"
          }
        }
      },
      "Error": {
        "properties": {
          "error": {
            "type": "string",
            "example": "Error explanation"
          }
        }
      },
      "UserInfo": {
        "required": [
          "isSubscribed",
          "email",
          "firstName",
          "lastName",
          "password"
        ],
        "properties": {
          "isSubscribed": {
            "type": "boolean",
            "example": true
          },
          "email": {
            "type": "string",
            "example": "user@email.com"
          },
          "firstName": {
            "type": "string",
            "example": "Harold"
          },
          "lastName": {
            "type": "string",
            "example": "Olsen"
          },
          "password": {
            "type": "string",
            "example": "Password1"
          }
        }
      },
      "Email": {
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "sim@email.com"
          }
        }
      },
      "ResetResponse": {
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Please check your email for the link to reset your password."
          },
          "resetToken": {
            "type": "string"
          }
        }
      },
      "ResetPassword": {
        "required": ["password","confirmPassword"],
        "properties": {
          "password": {
            "type": "string",
            "description": "Old password",
            "example": "old_password"
          },
          "confirmPassword": {
            "type": "string",
            "description": "New password",
            "example": "new_password"
          }
        }
      },
      "Success": {
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string"
          }
        }
      },
      "AddressResponse": {
        "properties": {
          "isDefault": {
            "type": "boolean"
          },
          "_id": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "state": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "zipCode": {
            "type": "string"
          },
          "user": {
            "type": "string"
          },
          "created": {
            "type": "string"
          },
          "__v": {
            "type": "integer"
          }
        }
      },
      "Address": {
        "properties": {
          "isDefault": {
            "type": "boolean"
          },
          "address": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "state": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "zipCode": {
            "type": "string"
          }
        }
      },
      "AddressCreateResponse": {
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "address": {
            "properties": {
              "isDefault": {
                "type": "boolean"
              },
              "_id": {
                "type": "string"
              },
              "address": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "country": {
                "type": "string"
              },
              "zipCode": {
                "type": "string"
              },
              "user": {
                "type": "string"
              },
              "created": {
                "type": "string"
              },
              "__v": {
                "type": "integer"
              }
            }
          }
        }
      },
      "AddressDeleteResponse": {
        "properties": {
          "success":{
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "address": {
            "properties": {
              "n": {
                "type": "integer"
              },
              "ok": {
                "type": "integer"
              },
              "deletedCount": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}